<UserControl x:Class="WpfApp1.View.EditFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View"
             xmlns:Model="clr-namespace:WpfApp1.Model"
             mc:Ignorable="d" 
             d:Height="350" d:Width="250">
    <UserControl.Resources>
        <Model:EnumerableJoinConverter x:Key="Converter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1">
            <Label Content="Id"/>
            <TextBox Text="{Binding EditedFolder.Id, UpdateSourceTrigger=PropertyChanged}" FontSize="19" Margin="5,0,5,15"/>
            <Label Content="Name"/>
            <TextBox Text="{Binding EditedFolder.Name, UpdateSourceTrigger=PropertyChanged}" FontSize="19" Margin="5,0,5,15" />
            <Label Content="Extentions"/>
            <TextBox Text="{Binding EditedFolder.Types, Converter={StaticResource Converter}, UpdateSourceTrigger=PropertyChanged}" FontSize="19" Margin="5,0,5,15"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding ErrorText}" Foreground="Red" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="3" Content="Edit Folder!" Command="{Binding EditSelectedFolder}"/>
    </Grid>
</UserControl>

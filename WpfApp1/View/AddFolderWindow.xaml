<Window x:Class="WpfApp1.View.AddFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:View="clr-namespace:WpfApp1.View"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="AddFolderWindow" Height="300" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <View:MenuBar/>
        <StackPanel Grid.Row="1">
            <Label Content="Id"/>
            <TextBox Text="{Binding Id}" FontSize="19" Margin="5,0,5,15"/>
            <Label Content="Name"/>
            <TextBox Text="{Binding Name}" FontSize="19" Margin="5,0,5,15"/>
            <Label Content="Extentions"/>
            <TextBox Text="{Binding Extentions}" FontSize="19" Margin="5,0,5,15"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Add Folder!" Command="{Binding AddFolder}"/>




    </Grid>
</Window>

<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:EditFolders="clr-namespace:WpfApp1.View"
        xmlns:MenuBar="clr-namespace:WpfApp1.View"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <MenuBar:MenuBar/>
        <EditFolders:EditFoldersBox Grid.Row="1" Loaded="EditFoldersBox_Loaded"/>

        <Button Grid.Row="2" Name="btnOrganize" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"
                Content="Organize!" FontSize="24" Click="btnOrganizeFiles"/>
    </Grid>
</Window>
